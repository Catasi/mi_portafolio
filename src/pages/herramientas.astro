---
import i18next, { t, changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";
import { herramientas } from "../data/herramientas.js";

changeLanguage("en");

const currentLanguage = i18next.language;
---

<Layout>
    <p>{t("titles.tools")}</p>

    <section>
        {herramientas.map((herramienta) => (
            <div class="herramienta">
                {currentLanguage === "fr" ? (
                    <h2>{herramienta.titulo_fr}</h2>
                ) : currentLanguage === "en" ? (
                    <h2>{herramienta.titulo_en}</h2>
                ) : (
                    <h2>{herramienta.titulo_es}</h2>
                )}<br>
                <div class="tipos">
                    <div class="tipo">
                    {herramienta.tipos.map((tipo) => (
                        <div class="tipo-info">
                            <img src={tipo.img} alt={tipo.nombre} class="tipo-img" />
                            <p>{tipo.herramienta}</p>
                        </div>
                    ))}
                    </div>
                </div>
            </div>
        ))}
    </section>
</Layout>

<style>
    h2 {
        color: #db750e;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        border-bottom: 2px solid #db750e;
        padding-bottom: 0.25rem;
    }
    section {
        gap: 20px;
        margin: 1rem;
        justify-content: center;
    }

    .tipos{
        padding-left: 2rem;
        align-items: center;
    }

    .tipo {
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
        justify-content: flex-start;
    }

    .tipo-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 80px;
        height: auto;
        padding: 0.5rem;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        background-color: #333;
        transition-duration: 0.3s;
    }

    .tipo-info:hover {
        transform: translateY(-10px);
    }

    .tipo-img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .tipo p {
        padding: 5px 0;
        margin: 0;
        font-size: 12px;
        color: #ffffff;
        text-align: center;
    }

    @media (max-width: 376px) {
        .tipos{
            padding-left: 0;
        }
    }
</style>