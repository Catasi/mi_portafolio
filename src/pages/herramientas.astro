---
import Layout from '../layouts/Layout.astro';
import { herramientas } from '../data/herramientas.js';
---

<Layout>
    <p>Herramientas que he usado en el desarrollo de mis proyectos</p>

    <div class="herramientas">
        {herramientas.map((herramienta) => (
            <div class="herramienta">
                <h2>{herramienta.titulo}</h2><br>
                <div class="tipos">
                    <div class="tipo">
                    {herramienta.tipos.map((tipo) => (
                        <div class="tipo-info">
                            <img src={tipo.img} alt={tipo.nombre} class="tipo-img" />
                            <p>{tipo.herramienta}</p>
                        </div>
                    ))}
                    </div>
                </div>
            </div>
        ))}
    </div>
</Layout>

<style>
    .herramientas h2 {
        color: #db750e;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        border-bottom: 2px solid #db750e;
        padding-bottom: 0.25rem;
    }
    .herramientas {
        gap: 20px;
        margin: 1rem;
        justify-content: center;
    }

    .tipos{
        padding-left: 2rem;
        align-items: center;
    }

    .tipo {
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
        justify-content: flex-start;
    }

    .tipo-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 80px;
        height: auto;
        padding: 0.5rem;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        background-color: #333;
    }

    .tipo-img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .tipo p {
        padding: 5px 0;
        margin: 0;
        font-size: 12px;
        color: #ffffff;
        text-align: center;
    }    
</style>