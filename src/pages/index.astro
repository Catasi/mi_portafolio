---
import { changeLanguage } from "i18next";
import Footer from "@/components/Footer.astro";
import Layout2 from "@/layouts/Layout_home.astro";
import Inicio from "@/components/home/Inicio.astro";
import Training from "@/components/home/Training.astro";
import Tools from "@/components/home/Tools.astro";
import Proyects from "@/components/home/Proyects_More.astro";
import AboutMe from "@/components/home/AboutMe.astro";

changeLanguage("en");
---

<Layout2>
  <Inicio />
  <AboutMe />
  <Proyects />
  <Training />
  <Tools />
  <Footer />
</Layout2>

<script>
  import "fullpage.js/dist/fullpage.css";
  import fullpage from "fullpage.js";

  document.addEventListener("DOMContentLoaded", () => {
    new fullpage("#fullpage", {
      sectionsColor: [],
      anchors: [],
      menu: "#menu",
      slidesNavigation: true,
      navigation: true,
      navigationPosition: "left",
      scrollOverflow: true,
      scrollOverflowReset: true,
      fitToSection: false,
      autoScrolling: true,
      responsiveSlides: true,
      TouchSensitivity: 10,
      continuousVertical: true,
      continuousHorizontal: true,
      responsiveHeight: 600,
      fixedElements: "#header, #footer",
    });
  });
</script>
