    <ParticlesBg client:only type="circle" color={["#FF9705", "#E05C00", "#E09F00"]} bg={true} />
    <div class="relative w-full h-full min-h-screen flex flex-row bg-gradient-to-r from-black to-white/0">
        <div class="flex-1 flex items-center justify-center ">
            <div class="aspect-square w-[min(100%,_40vw)] h-auto">
                <IconCloud client:load images={images} />
            </div>
        </div>
        <div class="flex-1">
            <div class="flex flex-col justify-center items-center min-h-screen">
                <div>
                  <h1 class="text-white text-center text-6xl font-bold mb-30">
                    Bienvenid@ a mi portafolio
                  </h1>
                  <p class="text-white text-center text-2xl mt-4 ">
                    Scrollea hacia abajo para ver mi portafolio
                  </p>
                </div>
                <div class="flex justify-center items-center mt-10">
                  <img src="/img/flecha-abajo.png" alt="flecha hacia abajo" class="w-10 h-10 animate-bounce" />
                  <!-- <a href="/" class="bg-white text-black rounded-full px-8 py-2 text-xl font-bold">
                      Ver mi Portafolio
                  </a> -->
                </div>
              </div>              
        </div>
    </div>
</body>


<style>

    body {
		color: white;
        padding: 0;
		margin: 0;
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		font-family: var(--font-mono);
	}

</style>