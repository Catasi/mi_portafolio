---
import { changeLanguage } from "i18next";
import { IconCloud } from "@/components/magicui/icon-cloud";
import { images } from "../../data/dataImg.js";
import ParticlesBg from "particles-bg";
import "../../styles/global.css";

changeLanguage("es");

const config = {
    num: [4, 10],
    rps: 0.5,
    radius: [150, 200],
    life: [5, 10],
    v: [1, 5],
    tha: [-40, 40],
    // body: "./img/icon.png", // Whether to render pictures
    // rotate: [0, 20],
    alpha: [0.6, 0],
    scale: [0.1, 0.4],
    position: "all",
    color: ["#FF9705"],
    cross: "dead",
    random: 15,
    g: 1, // gravity
    // f: [2, -1], // force
};
---

<body class="bg-black">
    <!-- <video
        src="/video/inicio.mp4"
