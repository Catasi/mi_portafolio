---
import { Ripple } from "@/components/magicui/ripple";
import { t } from "i18next";
---

<section class="section min-h-screen p-0 m-0">
  <div
    class="bg-[#111] w-full min-h-screen flex items-center justify-center px-20 gap-20"
  >
    <div class="w-2/3 min-h-screen relative overflow-hidden flex items-center">
      <h2 class="text-7xl z-20 relative">
        {t("about-me.title")}
      </h2>
      <Ripple client:load />
    </div>
    <div class="w-1/3 text-center">
      {t("about-me.description")}
      <br /><br />

      <a href="/about-me">
        <button
          class="mt-4 px-4 py-2 bg-[#db750e] text-white rounded hover:bg-[#c7680b] animate-pulse transition"
        >
          <span>{t("about-me.button")}</span>
        </button>
      </a>
    </div>
  </div>
</section>
