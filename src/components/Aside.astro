---
import { datosAside } from '../data/datosAside.js';
import i18next, {t} from 'i18next';

const lang = i18next.language;
---

<div class="aside-container">
  <div class="contenedor">
    <h1>CATASI ðŸ’«</h1>
    <img src="/img/katia.jpg" alt="Gato_negro" class="img-fluid">
    <h3>{t("aside.h3")}</h3>
    <p>{t("aside.description")}</p>
  </div>  
  <div class="contenedor-informacion">
    {datosAside.map((dato) => (  
      <div class="informacion flex flex-row items-center gap-x-4 mt-4">
          <img src={dato.icono} alt={dato.icono} class="w-12 h-12 rounded-full object-cover">
          <div class="flex flex-col">
            {lang === "en" ? (
              <strong class="info">{dato.info_en}</strong>
              <span class="descripcion">{dato.descripcion}</span>
            ) : (lang === "fr" ? (
              <strong class="info">{dato.info_fr}</strong>
              <span class="descripcion">{dato.descripcion}</span>
            ) : (
              <strong class="info">{dato.info_es}</strong>
              <span class="descripcion">{dato.descripcion}</span>
            ))}
          </div>
      </div>
      ))}
      <button>
        <a href="src/assets/CV_AideÃ©Casillas.pdf" download="CV_AideÃ©Casillas.pdf">
          {t("aside.buttonCV")}
        </a>
      </button>
  </div>
  
</div>

<style>
    :root {
      --font-mono: "IBM Plex Mono", ui-monospace, monospace;
    }

    .aside-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 1rem;
      padding: 1rem;
    }

    p{
      margin-top: 0;
    }

    img {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 90%;
    }

    button {
        background-color: #db750e;
        color: #fff;
        align-self: center;
        margin-top: 1rem;
        padding: 10px 20px;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        transition: transform 0.3s ease;
    }

    button:hover {
        transform: scale(1.1);
    }

    a{
      text-decoration: none;
      color: #fff;
    }

    .contenedor-info {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start; 
    }

    .informacion {
      display: flex;
      flex-direction: row;
      align-items: flex-start;
      gap: 1rem;
      margin-top: 1rem;
      font-size: 14px;
    }

    .informacion img{
      width: 40px;
      height: 40px;
      object-fit: cover;
    }

    .flex-col {
      display: flex;
      flex-direction: column;
      gap: 0.3rem;
      align-items: flex-start; 
    }

    @media ( max-width: 768px) {
      .aside-container {
        display: flex;
        flex-direction: row;
      }
    }

    @media (max-width: 426px){
      .aside-container {
        display: flex;
        flex-direction: column;
      }
    }

    @media (max-width: 320px) {
      .aside-container {
        padding: 10px 0;
      }
    }

</style>